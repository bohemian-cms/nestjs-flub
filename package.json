{
  "name": "nestjs-flub",
  "version": "0.0.6-beta",
  "description": "Pretty Error Stack Viewer for NestJS Framework",
  "main": "src/index.ts",
  "scripts": {
    "release": "standard-version",
    "build": "tsc && cp src/themes/* packages/themes/",
    "test": "nyc --require ts-node/register mocha --require source-map-support/register src/**/*.spec.ts --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shekohex/nestjs-flub.git"
  },
  "keywords": [
    "errorhandler",
    "error-reporting",
    "whoops",
    "nestjs",
    "middlewears"
  ],
  "author": "Shady Khalifa <shekohex@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shekohex/nestjs-flub/issues"
  },
  "homepage": "https://github.com/shekohex/nestjs-flub#readme",
  "dependencies": {
    "mustache": "^2.3.0",
    "stack-trace": "~0.0.10"
  },
  "peerDependencies": {
    "@nestjs/common": "^4.4.0",
    "@nestjs/core": "^4.4.0"
  },
  "devDependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^4.4.0",
    "@nestjs/microservices": "^4.4.1",
    "@nestjs/websockets": "^4.4.1",
    "@types/chai": "^4.0.5",
    "@types/mocha": "^5.0.0",
    "@types/node": "^10.0.3",
    "chai": "^4.1.2",
    "source-map-support": "^0.5.0",
    "coveralls": "^3.0.0",
    "import-sort-style-module": "^4.0.0",
    "lerna": "^2.5.1",
    "mocha": "^5.0.0",
    "nyc": "^11.3.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "standard-version": "^4.2.0",
    "supertest": "^3.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
